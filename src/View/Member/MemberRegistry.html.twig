                    <div class="card-header">
                        <strong class="card-title">Openstaande reserveringen</strong>
                    </div>
                    <div class="card-body">
                        <div style="padding:1em;overflow-x: scroll;">
                            <div class="card-title">
                                <h3 class="text-center">Reserveringen door lid aangemaakt</h3>
                            </div>
                            <hr>
                            <table class="bootstrap-data-table table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>tijd</th>
                                    <th>baan</th>
                                    <th>Speler</th>
                                    <th>hoeveelheid</th>
                                    <th>spelers</th>
                                    <th>Speeltijd</th>
                                    <th>aanpassen</th>
                                    <th>Verwijderen</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for CourtReservation in AccountData.CourtReservations|sort %}
                                    {% if date(CourtReservation.StartTime) > date()|date_modify("-1 hour") and (CourtReservation.ReservationType == 0 or CourtReservation.ReservationType == 9) %}
                                        <tr>
                                            <td>{{ CourtReservation.StartTime|date('d-m-Y H:i:s') }}</td>
                                            <td>{{ CourtReservation.Court }}</td>
                                            <td>{% if CourtReservation.Player.Firstname is defined %}{{ CourtReservation.Player.Firstname }} {% endif %} {% if CourtReservation.Player.Lastname is defined %}{{ CourtReservation.Player.Lastname }}{% endif %}</td>
                                            <td>{{ CourtReservation.Players }}</td>
                                            <td>
                                                {% if CourtReservation.OtherPlayers.First.Firstname is defined and CourtReservation.OtherPlayers.First.Lastname is defined %}
                                                    {% for Player in CourtReservation.OtherPlayers|sort %}
                                                        <p>{{ Player.Firstname }} {{ Player.Lastname }}</p>
                                                    {% endfor %}
                                                {% endif %}
                                            </td>
                                            <td>je hebt recht op:
                                                <span class="badge badge-light">
                                                        1 uur
                                                    </span>
                                                speel tijd
                                            </td>
                                            <td>
                                                <a class="btn btn-secondary" href="{{ path('PlayerChangeReservation',{time:CourtReservation.StartTime|date('U'),Court:CourtReservation.Court}) }}">
                                                    aanpassen
                                                </a>
                                            </td>
                                            <td>
                                                <a class="btn btn-danger" href="{{ path('PlayerDeleteReservation',{time:CourtReservation.StartTime|date('U'),Court:CourtReservation.Court}) }}">
                                                    verwijder
                                                </a>
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
