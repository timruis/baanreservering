{{ encore_entry_script_tags('DataTables') }}
<script>
        jQuery(document).ready(function () {
            $('[data-toggle="modal"]').on('click', function (e) {
                // convert target (e.g. the button) to jquery object
                var $target = $(e.target);

                // modal targeted by the button
                var modalSelector = $target.data('target');
                // retrieve the dom element corresponding to current attribute
                var $modalAttribute = $(modalSelector + ' #modal-link');
                var dataValue = $target.data('link');
                $modalAttribute.attr('href', dataValue);
            });
            line2Flot();


            $('.js-datepicker').datepicker({dateFormat: 'yy-mm-dd'}).val();
        });

        function line2Flot() {

            // first chart
            var chart1Options = {
                series: {
                    lines: {
                        show: true
                    },
                    points: {
                        show: true
                    },
                    curvedLines: {
                        active: true
                    }
                },
                xaxis: {
                    mode: "time",
                    timeformat: '%d.%m.%y',
                    tickFormatter: function (val, axis) {
                        var a = new Date(val * 1000);
                        var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                        var year = a.getFullYear();
                        var month = months[a.getMonth()];
                        var date = a.getDate();
                        return date + ' ' + month + ' ' + year;

                    },
                    timezone: "browser",
                },
                legend: {
                    noColumns: 3,
                    show: false
                },
                grid: {
                    color: "#000",
                    hoverable: true,
                    borderWidth: 0,
                    backgroundColor: 'transparent'
                },
                tooltip: {
                    show: true,
                    content: "hoeveelheid: %y - Maand: %x"
                }
            };
            var chart1Data = [{
                "label": "Reserveringen",
                "curvedLines": {
                    "apply": false
                },
                "animator": {
                    "start": 0,
                    "steps": 0,
                    "duration": 3000,
                    "direction": "right"
                },
                "idx": 0,
                "color": "#007BFF",
                "data": [{% for Reservation in Reservations %}
                    [ {{ Reservation.Date|date('U') }}, {{ Reservation.amount }}],
                    {% endfor %}]
            }];
            $.plot($("#chart1"), chart1Data, chart1Options);
        }
    </script>

