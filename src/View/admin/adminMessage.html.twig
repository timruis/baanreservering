                            {{ form_start(Message) }}

                            <div class="row">
                                <div class="col">
                                    {{ form_widget(Message) }}
                                </div>
                            </div>
                            {{ form_end(Message) }}
                        </div>

                </div>

            </div>

    </div>
</div>
        {% endblock %}


{% block javascripts %}

    {{ parent() }}




    <script>
        jQuery(document).ready(function() {
            $('.js-datepicker').datepicker({ dateFormat: 'yy-mm-dd' }).val();
            var ModelList = SchrinkModelList();
