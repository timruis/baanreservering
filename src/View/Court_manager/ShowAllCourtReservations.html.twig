            {{ parent() }}
        {% endblock %}

        {% block body %}
            {% if app.user.ProfileImage is null %}
                <div class="alert alert-danger">
                    <strong>Zonder profiel foto word u niet geactiveerd!</strong> voeg uw profiel foto <a class="badge badge-important" href="{{ path('accountSettings') }}">hier</a> toe.
                </div>
            {% endif %}
            {% if app.user.Firstname is null or app.user.Lastname is null %}
                <div class="alert alert-danger">
                    <strong>Configureer uw profiel!</strong> vul uw voor en achternaam in om verder te gaan. <a
                            class="badge badge-important" href="{{ path('accountSettings') }}">dat kan u hier</a>
                </div>
            {% endif %}
            {% if app.user.ActivateUser is null or app.user.ActivateUser == 0 %}
                <div class="alert alert-danger">
                    <strong>Je bent nog niet geactiveerd!</strong> Wacht totdat je geactiveerd wordt. Mocht het te lang duren neem dan contact op met info@zonenwind.nl
                </div>
            {% endif %}
            <div class="row w-100">
                <div class="card w-100" style="overflow-x: scroll; padding: 50px;">
                    <h3 id="monthYear">

                    </h3>
                    <div class="span12">
                        <table class="table-condensed table-bordered table-striped">
                            <thead>
                            <tr>
                                <th><span id="Day1"></span></th>
                                <th><span id="Day2"></span></th>
                                <th><span id="Day3"></span></th>
                                <th><span id="Day4"></span></th>
                                <th><span id="Day5"></span></th>
                                <th><span id="Day6"></span></th>
                                <th><span id="Day7"></span></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set day = 0 %}
                            {% set dayButton = 0 %}
                            {% for i in 0..52 %}
                            <tr>
                                {% for i in 0..6 %}
                                    {% set date = '+'~day ~ ' day' %}
                                    <td>{{ "now"|date_modify(date)|date("d/m/Y") }}</td>
                                    {% set day = day+1 %}
                                {% endfor %}
                            </tr>
                            <tr>
                                {% for i in 0..6 %}
                                    {% set date = '+'~dayButton ~ ' day' %}
                                    <td><a class="btn
                                {% if app.user.ActivateUser is null or app.user.ActivateUser == 0 %}
                                   disabled
                                {% endif %}" href="{{ path('CourtPlayersReservationAdmin',{date:"now"|date_modify(date)|date("Y-m-d")}) }}">
                                            kies
                                        </a>
                                    </td>
                                    {% set dayButton = dayButton+1 %}
                                {% endfor %}
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="content mt-3">
                <div class="animated fadeIn">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Reserveringen</strong>
                        </div>
                        <div class="card-body">
                            <!-- Credit Card -->

                            <div style="padding:1em;overflow-x: scroll;">
                                <h1>Alle reserveringen</h1>
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                    <tr>
                                        <th>id</th>
                                        <th>tijd</th>
                                        <th>baan</th>
                                        <th>Memo</th>
                                        <th>Speler</th>
                                        <th>Email</th>
                                        <th>Telefoon</th>
                                        <th>hoeveelheid</th>
                                        <th>Speeltijd</th>
                                        <th>Zie Reservering</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for CourtReservation in CourtReservations|sort %}
                                    {% if date(CourtReservation.StartTime) > date()  %}
                                        <tr>
                                            <td>{{ CourtReservation.id }}</td>
                                            <td>{{ CourtReservation.StartTime|date('d-m-Y H:i:s') }}</td>
                                            <td>{{ CourtReservation.Court }}</td>
                                            <td>{{ CourtReservation.MemoText }}</td>
                                            <td>{% if CourtReservation.Player.Firstname is defined %}{{ CourtReservation.Player.Firstname }} {% endif %} {% if CourtReservation.Player.Lastname is defined %}{{ CourtReservation.Player.Lastname }}{% endif %}</td>
                                            <td>{% if CourtReservation.Player.Email is defined %}{{ CourtReservation.Player.Email }}{% endif %}</td>
                                            <td>{% if CourtReservation.Player.Email is defined %}{{ CourtReservation.Player.Mobile }}{% endif %}</td>
                                            <td>{{ CourtReservation.Players }}</td>
                                            <td>
                                                deze group heeft recht op
                                                    <span class="badge badge-light">
                                                    {% if CourtReservation.Players == 4 or CourtReservation.Players == 3 or CourtReservation.Players == 2 %}
                                                         1 uur
                                                    {% else  %}
                                                        onbekende
                                                    {% endif %}
                                                    </span>
                                                speel tijd
                                            </td>
                                            <td><a class="btn" href="{{ path('check_Court',{time:CourtReservation.StartTime|date('U'),Court:CourtReservation.Court}) }}">kies</a></td>
                                        </tr>
                                        {% elseif date(CourtReservation.StartTime) < date() and date(CourtReservation.StartTime) > date() and today == true %}
                                            <tr>
                                                <td>{{ CourtReservation.id }}</td>
                                                <td>{{ CourtReservation.StartTime|date('d-m-Y H:i:s') }}</td>
                                                <td>{{ CourtReservation.Court }}</td>
                                                <td>{% if CourtReservation.Player.Firstname is defined %}{{ CourtReservation.Player.Firstname }} {% endif %} {% if CourtReservation.Player.Lastname is defined %}{{ CourtReservation.Player.Lastname }}{% endif %}</td>
                                                <td>{% if CourtReservation.Player.Email is defined %}{{ CourtReservation.Player.Email }}{% endif %}</td>
                                                <td>{% if CourtReservation.Player.Email is defined %}{{ CourtReservation.Player.Mobile }}{% endif %}</td>
                                                <td>{{ CourtReservation.Players }}</td>
                                                <td>
                                                    u heeft recht op
                                                        <span class="badge badge-light">
                                                        {% if CourtReservation.Players == 4 %}
                                                        1 uur
                                                        {% elseif CourtReservation.Players == 3  %}
                                                        3 kwartier
                                                        {% elseif CourtReservation.Players == 2  %}
                                                        één half uur
                                                        {% else  %}
                                                        onbekende
                                                        {% endif %}
                                                        </span>
                                                    speel tijd
                                                </td>
                                            </tr>
                                        {% elseif date(CourtReservation.StartTime) > date() and today == false %}
                                            <tr>
                                                <td>{{ CourtReservation.id }}</td>
                                                <td>{{ CourtReservation.StartTime|date('d-m-Y H:i:s') }}</td>
                                                <td>{{ CourtReservation.Court }}</td>
                                                <td>{% if CourtReservation.Player.Firstname is defined %}{{ CourtReservation.Player.Firstname }} {% endif %} {% if CourtReservation.Player.Lastname is defined %}{{ CourtReservation.Player.Lastname }}{% endif %}</td>
                                                <td>{% if CourtReservation.Player.Email is defined %}{{ CourtReservation.Player.Email }}{% endif %}</td>
                                                <td>{% if CourtReservation.Player.Email is defined %}{{ CourtReservation.Player.Mobile }}{% endif %}</td>
                                                <td>{{ CourtReservation.Players }}</td>
                                                <td>
                                                    u heeft recht op
                                                    <span class="badge badge-light">
                                                        {% if CourtReservation.Players == 4 %}
                                                            1 uur
                                                        {% elseif CourtReservation.Players == 3  %}
                                                            3 kwartier
                                                        {% elseif CourtReservation.Players == 2  %}
                                                            één half uur
                                                        {% else  %}
                                                            onbekende
                                                        {% endif %}
                                                        </span>
                                                    speel tijd
                                                </td>
                                            </tr>
                                    {% endif %}
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        {% endblock %}
